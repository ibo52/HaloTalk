<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.halosoft.talk.controllers.setting.AccountController">
   <children>
      <HBox fx:id="editFieldBox" alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" style="-fx-background-color: -fx-base;" StackPane.alignment="BOTTOM_CENTER">
         <children>
            <TextField fx:id="editField" promptText="Prompt text" />
            <Button fx:id="editButton" mnemonicParsing="false" text="Apply" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <ScrollPane fx:id="accountSettingsPane" fitToWidth="true">
         <content>
            <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0">
               <top>
                  <StackPane BorderPane.alignment="CENTER">
                     <children>
                        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="NEVER">
                           <content>
                              <VBox fx:id="userImageBox" alignment="CENTER" style="-fx-background-color: #00ffff50; -fx-background-radius: 30% 30%;">
                                 <children>
                                    <ImageView fx:id="userImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../../../../images/icons/person.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                              </VBox>
                           </content>
                        </ScrollPane>
                        <ImageView fx:id="userImageEditButton" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_RIGHT">
                           <image>
                              <Image url="@../../../../../images/icons/edit.png" />
                           </image>
                           <StackPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </StackPane.margin>
                        </ImageView>
                        <HBox alignment="TOP_RIGHT">
                           <children>
                              <ImageView fx:id="undoButton" fitHeight="32.0" fitWidth="32.0" onMouseClicked="#undoButtonMouseClicked" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../images/icons/undo.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                     </children>
                  </StackPane>
               </top>
               <center>
                  <VBox alignment="TOP_CENTER" spacing="5.0">
                     <children>
                        <HBox fx:id="nameEditBox" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" onMouseClicked="#nameEditBoxMouseClicked" spacing="10.0">
                           <children>
                              <ImageView fx:id="settingImage" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../images/icons/person.png" />
                                 </image>
                              </ImageView>
                              <VBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Name" wrapText="true">
                                       <font>
                                          <Font name="System Bold" size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="userName" text="default name for user" wrapText="true">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label text="This is not nick or key. This name can be seen by other users on LAN" wrapText="true">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </VBox>
                              <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../images/icons/edit.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                        <HBox fx:id="statusEditBox" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" onMouseClicked="#statusEditBoxMouseClicked" spacing="10.0">
                           <children>
                              <ImageView fx:id="settingImage1" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../images/icons/psychology_alt.png" />
                                 </image>
                              </ImageView>
                              <VBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Status" wrapText="true">
                                       <font>
                                          <Font name="System Bold" size="20.0" />
                                       </font>
                                    </Label>
                                    <ComboBox fx:id="userStatus" promptText="change your status" />
                                    <Label text="This status text describes your current situation to inform others as you may available, busy, on call etc." wrapText="true">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </VBox>
                              <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../images/icons/edit.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                        <HBox fx:id="aboutEditBox" layoutX="10.0" layoutY="104.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" onMouseClicked="#aboutEditBoxMouseClicked" spacing="10.0">
                           <children>
                              <ImageView fx:id="settingImage11" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../images/icons/info.png" />
                                 </image>
                              </ImageView>
                              <VBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="About me" wrapText="true">
                                       <font>
                                          <Font name="System Bold" size="20.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="userAbout" text="default about for user" wrapText="true">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label text="This text describes about you,  (e.g: what you love etc.). So others can be able to know you better" wrapText="true">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </VBox>
                              <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../images/icons/edit.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </content>
      </ScrollPane>
   </children>
</StackPane>
